@model IEnumerable<AppUser>

<div id="Users">
    <table id="tblProducts" class="table table-bordered table-striped ">

        <thead>
            <tr>

                <th>User Name</th>
                <th>Email</th>
              
                <th>#</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>

                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                      
                        <td>
                            <a class="btn btn-danger btn-sm" role="button" onclick="removeUser('@item.Id')">Remove</a>
          
                        </td>

                    </tr>
                }


            }
        </tbody>

    </table>
</div>



<script type="text/javascript">


    function removeUser(id) {

        debugger;

        var action = '@Url.Action("RemoveUser", "Admin")';
        $.ajax({
            url: action,
            type: 'Json',
            data: { UserId: id },

            success: function (response) {

                $('#Users').html(response);
            },
            error: function () { // if error occured
                alert('Error:');
            }


        });
         }

</script>

