@model SignupModel

<div class="well bs-component">

    <form class="form-horizontal" asp-action="Signup" asp-controller="Account" method="post">
        <fieldset>
            <legend>Signup</legend>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label for="inputEmail" class="col-md-4 control-label">UserName</label>
                <div><span asp-validation-for=@Model.Username class="text-danger"></span></div>
                <div class="col-md-4">
                    <input type="text" class="form-control" asp-for="@Model.Username" >
                </div>
            </div>

            <div class="form-group">
                <label for="inputEmail" class="col-md-4 control-label">Email</label>
                <div><span asp-validation-for="@Model.Email" class="text-danger"></span></div>
                <div class="col-md-4">
                    <input type="text" class="form-control" asp-for="@Model.Email" >
                </div>
            </div>


            <div class="form-group">
                <label for="inputPassword" class="col-md-4 control-label">Password</label>
                <div><span asp-validation-for="@Model.Password" class="text-danger"></span></div>
                <div class="col-md-4">
                    <input type="password" class="form-control" asp-for="@Model.Password" >
                </div>
            </div>

            <div class="form-group">
                <label for="inputPassword" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">Signup</button>
                </div>
            </div>


        </fieldset>
    </form>

</div>

@section scripts{

   <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}